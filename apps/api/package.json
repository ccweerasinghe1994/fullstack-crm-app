{
  "name": "@crm/api",
  "version": "1.0.0",
  "description": "CRM Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "pnpm tsoa:gen && ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "pnpm tsoa:gen && ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "build": "pnpm tsoa:gen && tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "tsoa:gen": "tsoa spec-and-routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@crm/shared": "workspace:*",
    "@prisma/client": "^6.19.0",
    "@tsoa/runtime": "^6.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsx": "^4.20.6",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
